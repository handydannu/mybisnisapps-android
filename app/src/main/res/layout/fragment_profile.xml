<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_profile"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18.5sp"
            android:textColor="@color/colorPrimary"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="-2.2sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/profile_pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Steven Gerrard"
            android:fontFamily="@font/ubuntu_medium"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/profile_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.5sp"
            android:textColor="@color/colorPrimary"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="-2.2sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/profile_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Company: Stivie G Hotel Bandung"
            />



        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_surat"
            android:layout_marginStart="32dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/profile_company"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toBottomOf="@id/profile_company"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Steven Gerrard@stivieghotelbandung.com"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toBottomOf="@id/txt_email" />

        <ImageView
            android:id="@+id/icon_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_pointer"
            android:layout_marginStart="45dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/icon_email"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adress:"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toBottomOf="@id/icon_email"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/profile_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Jl. Sersan Badjuri 72 - Bandung, Indonesia"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toBottomOf="@id/txt_pointer" />

        <ImageView
            android:id="@+id/icon_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_telepon"
            android:layout_marginStart="45dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/icon_pointer"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toBottomOf="@id/icon_pointer"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/profile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="+62 222 788 465"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toBottomOf="@id/txt_phone" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/icon_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_web"
            android:layout_marginStart="45dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/icon_phone"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_webb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web:"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toBottomOf="@id/icon_phone"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://stevieghotelbandung.com"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toBottomOf="@id/txt_webb"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_medium"
            />


    </android.support.constraint.ConstraintLayout>

    </ScrollView>

</FrameLayout>